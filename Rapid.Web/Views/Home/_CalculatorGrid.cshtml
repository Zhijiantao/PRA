@model IEnumerable<ProductViewModel>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Discount</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductViewModel item in Model)
        {
            <tr>
                  <td>@item.ProductId</td>
               <td>@item.ProductName</td>
                 <td>@item.Price</td>  
                 <td>@item.DiscountIndicator</td>


            <td>@Html.ActionLink("Cost Estimate", "Calculate", new { id = item.ProductId }, new { @class = "btn btn-primary" })</td>
                
                 </tr>
        }
    </tbody>
    <tfoot>
    
    </tfoot>
</table>
